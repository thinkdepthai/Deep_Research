---
stages:
  unit_test:
    api:
      openai:
        api_key: ${OPENAI_API_KEY}
        base_url: https://api.openai.com/v1
        organization: ${OPENAI_ORG_ID:-""}
        project: ${OPENAI_PROJECT_ID:-""}
        default_model: gpt-4o-mini
      azure:
        api_key: ${AZURE_OPENAI_API_KEY}
        azure_endpoint: https://your-endpoint.openai.azure.com
        api_version: 2024-05-01-preview
        deployment_map:
          gpt-4o-supervisor: gpt-4o-supervisor
          gpt-4o-mini: gpt-4o-mini
          gpt-4o-mini-extended: gpt-4o-mini-extended
    search:
      backend: tavily
      tavily:
        api_key: ${TAVILY_API_KEY}
        base_url: https://api.tavily.com
        max_results: 3
        topic: general
        include_raw_content: true
    roles:
      supervisor:
        backend: azure
        handle: gpt-4o-supervisor
      researcher_main:
        backend: openai
        handle: gpt-4o-mini
      researcher_summarizer:
        backend: openai
        handle: gpt-4o-mini
      researcher_compressor:
        backend: openai
        handle: gpt-4o-mini
      writer:
        backend: openai
        handle: gpt-4o-mini-extended
      scope_primary:
        backend: openai
        handle: gpt-4o-mini
      scope_creative:
        backend: openai
        handle: gpt-4o-mini
